@@ -356,6 +356,16 @@
 				function = "uart0";
 			};
 
+			uart1_pins_a: uart1@0 {
+				pins = "PE21", "PE22";
+				function = "uart1";
+			};
+
+			uart2_pins_a: uart2@0 {
+				pins = "PB0", "PB1";
+				function = "uart2";
+			};
+
 			lcd_rgb666_pins_a: lcd-rgb666-pe {
 				pins = "PE0", "PE1", "PE2", "PE3", "PE4", "PE5",
