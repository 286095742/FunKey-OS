@@ -109,6 +109,12 @@
 	status = "okay";
 };
 
+/*&uart2 {
+	pinctrl-0 = <&uart2_pins_a>;
+	pinctrl-names = "default";
+	status = "okay";
+};*/
+
 &usb_otg {
 	dr_mode = "otg";
 	status = "okay";
